<h1>ToDoリスト</h1>

<%= link_to "新規タスク作成", new_task_path, class: "btn btn-primary" %>

<div>
  <%= link_to "すべて", tasks_path %> |
  <%= link_to "完了タスクのみ", tasks_path(filter: "completed") %> |
  <%= link_to "未完了タスクのみ", tasks_path(filter: "incomplete") %>
</div>

<table border="1" cellpadding="8" cellspacing="0">
  <thead>
    <tr>
      <th>タイトル</th>
      <th>詳細</th>
      <th>完了</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td>
          <% if task.done %>
            ✅ 完了
          <% else %>
            ⏳ 未完了
          <% end %>

          <%= button_to "切り替え", toggle_task_path(task), method: :patch %>
        </td>
        <td>
          <%= link_to '詳細', task_path(task) %> |
          <%= link_to '編集', edit_task_path(task) %> |
          <%= link_to '削除', task_path(task), method: :delete, data: { confirm: '本当に削除しますか？' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
